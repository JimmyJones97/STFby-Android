<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="left|center_vertical|center_horizontal|center"
    android:id="@+id/imgtxt_listitem"
    android:background="@color/myWhiteColor"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">

    <CheckBox
        android:layout_gravity="center"
        android:id="@+id/imgtxt_itemcheckbox"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/myBlackColor"
        android:gravity="left|center_vertical|center_horizontal|center"
        android:layout_gravity="center"
        android:id="@+id/imgtxt_itemtext1"
        android:background="@drawable/toolbar_btn_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:minWidth="140dp"
        android:text="图层"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/ll_layerListEdit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <View
            android:layout_gravity="center"
            android:background="#ff66ccff"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_margin="5dp" />

        <com.xzy.forestSystem.gogisapi.MyControls.NumberCircleProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressBar_transp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/NumberCircleProgressBar_Default" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgtxt_itemimage1"
            android:background="@drawable/toolbar_btn_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgtxt_itemimage2"
            android:background="@drawable/toolbar_btn_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:src="@drawable/layerrender"
            android:scaleType="center" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgtxt_itemimage3"
            android:background="@drawable/toolbar_btn_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:src="@drawable/layerattrib_edit"
            android:scaleType="center" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgtxt_itemimage7"
            android:background="@drawable/toolbar_btn_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:src="@drawable/rebuilddata48"
            android:scaleType="center" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgtxt_itemimage4"
            android:background="@drawable/toolbar_btn_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:src="@drawable/page_up"
            android:scaleType="center" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgtxt_itemimage5"
            android:background="@drawable/toolbar_btn_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:src="@drawable/page_down"
            android:scaleType="center" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgtxt_itemimage6"
            android:background="@drawable/toolbar_btn_selector"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:src="@drawable/deleteobject"
            android:scaleType="center" />
    </LinearLayout>
</LinearLayout>
