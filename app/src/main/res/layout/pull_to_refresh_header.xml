<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ptr_id_header_container" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="47dp">
    <RelativeLayout android:id="@+id/ptr_id_header" android:layout_width="match_parent" android:layout_height="47dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ptr_id_textwrapper" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerInParent="true">
            <TextView android:textStyle="bold" android:textColor="#ff999999" android:id="@+id/ptr_id_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false"/>
            <TextView android:textStyle="bold" android:textColor="#ff999999" android:id="@+id/ptr_id_last_updated" android:paddingTop="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false"/>
        </LinearLayout>
        <ImageView android:id="@+id/ptr_id_arrow" android:background="@drawable/ad_button_015_refresh_down_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/ptr_id_textwrapper" android:layout_centerVertical="true"/>
        <ProgressBar android:id="@+id/ptr_id_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:indeterminateDrawable="@drawable/updating" android:layout_toLeftOf="@+id/ptr_id_textwrapper" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
