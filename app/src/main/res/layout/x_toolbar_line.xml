<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="horizontal" android:id="@+id/toolbar_line" android:background="@drawable/toolbar_shape" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_toolbar_line" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:id="@+id/bt_LineAddHand" android:tag="手绘线" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="手绘" android:drawableTop="@drawable/line_m" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_ToolbarPolyline_AddInCenter" android:tag="地图中心点编辑完成" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="地图中心" android:width="55dp" android:drawableTop="@drawable/addinmapcenter" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_LineAddFreeHand" android:tag="自由手绘线" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="自由手绘" android:width="50dp" android:drawableTop="@drawable/freehand0148" style="@style/toolbar_Button_Style"/>
            <View android:layout_gravity="center" android:background="#ffffffff" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
            <Button android:id="@+id/bt_LineGenerate" android:tag="线编辑完成" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="生成" android:drawableTop="@drawable/check2048" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_LineCancel" android:tag="线编辑取消" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="取消" android:drawableTop="@drawable/cancel8048" style="@style/toolbar_Button_Style"/>
            <View android:layout_gravity="center" android:background="#ffffffff" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
            <Button android:id="@+id/bt_LineAttribute" android:tag="线属性" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="属性" android:drawableTop="@drawable/feature_editing" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_Line_Paste" android:tag="粘贴数据" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="粘贴" android:drawableTop="@drawable/paste" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_PolylineMove" android:tag="移动选择" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="移动" android:drawableTop="@drawable/move_offset48" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_PolylineDelete" android:tag="删除选择" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="删除" android:drawableTop="@drawable/delete" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_LineChangeDir" android:tag="反向线" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="反向" android:drawableTop="@drawable/changedirection48" style="@style/toolbar_Button_Style"/>
            <View android:layout_gravity="center" android:background="#ffffffff" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
            <Button android:id="@+id/bt_LineAddByGPS" android:tag="GPS足迹" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="GPS" android:drawableTop="@drawable/gps_track_line_start48" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_Line_AddGPSPtn" android:tag="GPS拐点" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="拐点" android:drawableTop="@drawable/point_g" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_LineByCoord" android:tag="坐标输入" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="坐标" android:drawableTop="@drawable/line_vertex_add48" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_LineByAddNextPoint" android:tag="添加偏移点" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="偏移点" android:drawableTop="@drawable/addnextpoint" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_Line_FromFile" android:tag="导入坐标文件" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="导入文件" android:width="55dp" android:drawableTop="@drawable/imporfromfile" style="@style/toolbar_Button_Style"/>
            <View android:layout_gravity="center" android:background="#ffffffff" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
            <Button android:id="@+id/bt_LinePtnUndo" android:tag="撤消" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="撤消" android:drawableTop="@drawable/redo48" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_LinePtnRedo" android:tag="重做" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="重做" android:drawableTop="@drawable/undo48" style="@style/toolbar_Button_Style"/>
            <View android:layout_gravity="center" android:background="#ffffffff" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
            <Button android:id="@+id/bt_lineEdit_MoveVertex" android:tag="移点" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="移点" android:drawableTop="@drawable/vertex_move" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_lineEdit_AddVertex" android:tag="加点" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="加点" android:drawableTop="@drawable/vertex_add" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_lineEdit_DelVertex" android:tag="删点" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="删点" android:drawableTop="@drawable/vertex_del" style="@style/toolbar_Button_Style"/>
            <View android:layout_gravity="center" android:background="#ffffffff" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
            <Button android:id="@+id/bt_lineEdit_SplitLine" android:tag="线打断" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="打断" android:drawableTop="@drawable/line_split48" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_lineEdit_Change" android:tag="转向" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="转向" android:drawableTop="@drawable/line_changeflip48" style="@style/toolbar_Button_Style"/>
            <Button android:id="@+id/bt_lineEdit_Union" android:tag="连接" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="连接" android:drawableTop="@drawable/line_connect48" style="@style/toolbar_Button_Style"/>
        </LinearLayout>
    </HorizontalScrollView>
    <View android:layout_gravity="center" android:background="#ffffffff" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
    <Button android:id="@+id/bt_lineEdit_Exit" android:tag="关闭工具" android:background="@drawable/toolbar_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="1dp" android:text="关闭" android:drawableTop="@drawable/close0148" style="@style/toolbar_Button_Style"/>
</LinearLayout>
